@model IEnumerable<IdentityTest2.Models.News1>

@{
    ViewBag.Title = "SearchForNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<div style="background-color: #e1e2e1; height: 200px; padding-top: 0px;">
    <h2 style = "background-color: #b7b4b4"><img src="~/Content/Images/kapy_logo.png" style="width:80px;height:50px;"></h2>
    <span style="text-align: center;">
        <h1 style = "font-family: Impact, Charcoal, sans-serif;">Kapy's News Searching</h1>
    </span>
</div>
<div>
    <table style="margin-left: 35%; margin-top: 10px; border: none;">
        <tr>
            @using (Html.BeginForm())
            {
                <td style="border: none;">
                    <label id="lblName">Enter Keyword</label>
                </td>
                    <td style="border: none;">@Html.TextBox("SearchString")</td>
                    <td style="border: none;">
                        <input id="btnSearch" type="submit" value="Search" />
                    </td>
            }
        </tr>
    </table>
</div>


<table class="table">

    @if (Model.Count() == 0)
    {
        <tr>
            <td style = "color: red; colspan = "4";">No data match search criteria</td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.picUrl == "")
                {
                    <img src="~/Content/Images/kapy_logo.png" style="width:200px;height:128px;">
                }
                else
                {
                    <img src="@Html.DisplayFor(modelItem => item.picUrl) " style="width:200px;height:128px;">
                }
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.uniqueTitle)
                </td>*@
            <td>
                @Html.ActionLink(item.newsTitle, "Details", new { id = item.newsId })
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.newsDate)*@
                @Html.DisplayFor(modelItem => item.newsTime)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.newsTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.origUrl)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.newsContent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.numOfClicks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.numOfLikes)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Category.categoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source.sourceName)
            </td>
            <td>
                @*@Html.ActionLink("Details", "Details", new { id = item.newsId }) |
                        @Html.ActionLink("Edit", "Edit", new { id=item.newsId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.newsId })*@
            </td>
        </tr>
    }
</table>




